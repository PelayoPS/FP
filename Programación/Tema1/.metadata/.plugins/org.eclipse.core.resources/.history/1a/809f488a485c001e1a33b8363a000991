package Actividades;

import java.util.Scanner;

public class Actividad7 {

	public static void main(String[] args) {
		double defaultYear = 2004;
		// TODO Auto-generated method stub
		/*
		 * Determinar si un a単o pedido por teclado es bisiesto
		 */
		Scanner keyboard = new Scanner(System.in);
		System.out.println("Introduce el a単o");
		int year = keyboard.nextInt();
		double substraction = Math.abs(defaultYear - year);
		String msg = substraction != ((int) substraction) ?
				"El a単o no es bisiesto" :
				"El a単o es bisiesto";
		System.out.println(msg);
		keyboard.close();
	}
}
